        <li class="list-group-item">{{field}}: {{value}}</li>
    </ul>
    {{/data}}

    <a href="/"><button class="btn btn-warning">Главная страница</button></a>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>